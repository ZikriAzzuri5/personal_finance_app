<div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl ">
  <div class="md:flex flex flex-col">
    <div class="border-b-2 flex items-center">
      <div class="md:flex-shrink-0 mr-6 ">
        <img class="object-cover h-12 w-12 sm:h-16 sm:w-16 rounded-full max-w-none ml-4" src="https://source.unsplash.com/random" alt="Random Image">
      </div>
      <div class="p-8">
          <p class="text-gray-500"><%= @transaction.transaction_at %></p>
          <div class="flex flex-row justify-between space-x-6 mt-4">
            <%= link_to 'Remove', @transaction, data: { turbo_method: :delete, confirm: 'Are you sure?' }, class:"bg-gradient-to-r from-red-500 to-red-700 hover:from-red-700 hover:to-red-900 text-white font-bold py-2 px-4 rounded-md shadow-lg transition duration-500 ease-in-out transform hover:-translate-y-1 hover:scale-110" %>
            <%= link_to 'Edit', edit_transaction_path(@transaction), class: "border border-gray-100 text-gray-800 font-bold py-2 px-4 rounded-md shadow transition duration-500 ease-in-out transform hover:-translate-y-1 hover:scale-110" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
