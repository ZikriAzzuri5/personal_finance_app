<%= render partial: 'navbar' %>
<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">
  <div class="bg-white rounded-lg shadow-lg p-8">
    <h2 class="text-2xl font-bold mb-4">Lend</h2>
    <%= form_with model: @transaction, class: "w-full" do |form| %>
      <div class="mb-4">
        <%= form.label :amount, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.number_field :amount, class: "appearance-none border rounded w-full py-2 px-3
          text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-4">
        <%= form.label :category_id, class: "block text-gray-700 font-bold mb-2"%>
        <%= form.select :category_id, category_select_options(current_user.id, params[:transaction_type_id]), {}, class: "block
          w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none
          focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
      <div class="mb-4">
        <%= form.label :wallet_id, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.select :wallet_id, wallet_select_options, {}, class: "block
          w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none
          focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
      <div class="mb-4">
        <%= form.label :contact_id, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_field :contact_id, class: "block
          w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none
          focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
      <div class="mb-4">
        <%= form.label :description, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_area :description, class: "resize-none w-full h-32 px-3 py-2 text-sm border shadow rounded-md " %>
      </div>
      <div class="mb-4">
        <%= form.label :transaction_at, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.datetime_select :transaction_at, class:"appearance-none block w-full bg-gray-200 text-gray-700
          border border-gray-200 rounded py-2 px-4 focus:bg-white focus:outline-none focus:border-blue-500" %>
      </div>
      <div class="flex justify-center">
        <%= form.submit class: "w-full flex justify-center mt-4 py-2 px-4 border border-transparent rounded-md
        shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none
        focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>
