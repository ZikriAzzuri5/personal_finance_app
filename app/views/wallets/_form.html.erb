<%= render 'errors', errors: @wallet.errors.full_messages %>

<%= form_with model: @wallet, class: "space-y-6" do |form| %>
  <div>
    <%= form.label :name, class: "text-sm font-medium text-gray-700 block" %>
      <div class="mt-1">
        <%= form.text_field :name, class: "text-sm font-normal px-3 py-2 mb-2 text-slate-700 border
          shadow rounded w-full placeholder: text-slate-700 focus:outline-none focus:ring-l
          focus:ring-green-500 focus:border-green-500 invalid:text-red-700 invalid:focus:ring-red-700
          invalid:focus:border-red-700" %>
      </div>
    </div>
    <div>
      <%= form.label :wallet_type_id, class: "text-sm font-medium text-gray-700 block"%>
      <div class="mt-1 ">
        <%= form.select :wallet_type_id, wallet_type_select_options, {}, class: "text-sm font-normal
          px-3 py-2 mb-2 text-slate-700 border shadow rounded w-full placeholder: text-slate-700
          focus:outline-none focus:ring-l focus:ring-green-500 focus:border-green-500 invalid:text-red-700
          invalid:focus:ring-red-700 invalid:focus:border-red-700" %>
      </div>
    </div>
      <div>
        <%= form.label :currency_id, class: "text-sm font-medium text-gray-700 block"%>
        <div class="mt-1 ">
          <%= form.select :currency_id, currency_select_options, {}, class: "text-sm font-normal px-3
            py-2 mb-2 text-slate-700 border shadow rounded w-full placeholder: text-slate-700 focus:outline-none
            focus:ring-l focus:ring-green-500 focus:border-green-500 invalid:text-red-700 invalid:focus:ring-red-700
            invalid:focus:border-red-700" %>
        </div>
    </div>
    <div>
      <%= form.label :amount, class: "text-sm font-medium text-gray-700 block"%>
      <div class="mt-1">
        <%= form.number_field :amount, class: "text-sm font-normal px-3 py-2 mb-2 text-slate-700
          border shadow rounded w-full placeholder: text-slate-700 focus:outline-none focus:ring-l
          focus:ring-green-500 focus:border-green-500 invalid:text-red-700 invalid:focus:ring-red-700
          invalid:focus:border-red-700" %>
      </div>
    </div>
    <div>
      <%= form.label :description, class: "text-sm font-medium text-gray-700 block"%>
      <div class="mt-1">
        <%= form.text_field :description, class: "text-sm font-normal px-3 py-2 mb-2 text-slate-700
          border shadow rounded w-full placeholder: text-slate-700 focus:outline-none focus:ring-l
          focus:ring-green-500 focus:border-green-500 invalid:text-red-700 invalid:focus:ring-red-700
          invalid:focus:border-red-700" %>
      </div>
    </div>
    <div>
      <%= form.submit class: "w-full flex justify-center mt-4 py-2 px-4 border border-transparent
        rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none
        focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
<% end %>
