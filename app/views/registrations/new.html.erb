<% if flash[:notice] %>
  <%= content_tag :h1, flash[:notice] %>
<% else %>
  <%= content_tag :h1, "Please Log in" %>
<% end %>

<div class="min-h-screen bg-bgColor flex flex-col items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="bg-white p-8 rounded-lg shadow-md max-w-md w-full">
    <div class="flex flex-row justify-between">
      <%= link_to root_path do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
      <% end %>
      <%= link_to "Login", login_path, class:"text-gray-600 mb-8 hover:underline font-medium cursor-pointer"%>
    </div>
    <div class="text-center">
      <h1 class="text-2xl font-bold text-gray-800 mb-4">Create Account</h1>
      <p class="text-gray-600 mb-8">Please enter your details.</p>
    </div>
    <%= form_with model: @user, url: register_path, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email, class: "text-sm font-medium text-gray-700 block"%>
        <div class="mt-1">
          <%= form.email_field :email, placeholder: "abc@gmail.com", class: "text-sm font-normal px-3 py-2 mb-2 text-slate-700 border shadow rounded w-full placeholder: text-slate-700 focus:outline-none focus:ring-l focus:ring-green-500 focus:border-green-500 invalid:text-red-700 invalid:focus:ring-red-700 invalid:focus:border-red-700" %>
        </div>
      </div>
      <div>
        <% if @user.errors.full_messages.present? %>
          <% @user.errors.full_messages.each do |error| %>
            <span class="text-red-500 my-3"><%= error %></span>
          <% end %>
        <% end %>
      </div>
      <div>
        <%= form.label :password, class: "text-sm font-medium text-gray-700 block" %>
        <div class="mt-1">
          <%= form.password_field :password, placeholder: "Password", class: "text-sm font-normal px-3 py-2 mb-2 border shadow rounded w-full placeholder: text-slate-700 focus:outline-none focus:ring-l focus:ring-green-500 focus:border-green-500 " %>
        </div>
      </div>
      <div>
        <%= form.label :password_confirmation, class: "text-sm font-medium text-gray-700 block" %>
        <div class="mt-1">
          <%= form.password_field :password_confirmation, placeholder: "Password", class: "text-sm font-normal px-3 py-2 mb-2 border shadow rounded w-full placeholder: text-slate-700 focus:outline-none focus:ring-l focus:ring-green-500 focus:border-green-500 " %>
        </div>
      </div>
      <div>
        <%= form.submit "Register", class: "w-full flex justify-center mt-4 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>

