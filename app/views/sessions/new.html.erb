<% if flash[:notice] %>
  <%= content_tag :h1, flash[:notice] %>
<% else %>
  <%= content_tag :h1, "Please Log in" %>
<% end %>

<%= form_with url: login_path do |form| %>
  <%= form.text_field :email %><br>
  <%= form.password_field :password %><br>
  <%= link_to "Sign Up", new_user_path %>
  <%= form.submit "Sign In!" %>
<% end %>