<div class="min-h-screen bg-bgColor flex flex-col items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="bg-white p-8 rounded-lg shadow-md max-w-md w-full">
    <div class="text-center">
      <h1 class="text-2xl font-bold text-gray-800 mb-4">Create Transaction</h1>
      <p class="text-gray-600 mb-8">Please enter your details.</p>
    </div>
    <%= form_with model: @transaction_template, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :date, class: "text-sm font-medium text-gray-700 block"%>
        <div class="mt-1">
          <%= form.date_field :date, class: "text-sm px-3 py-2 mb-2 text-slate-700 border shadow rounded-md w-full focus:outline-none focus:ring-l focus:ring-green-500 focus:border-green-500 invalid:text-red-700 invalid:focus:ring-red-700 invalid:focus:border-red-700" %>
        </div>
      </div>
      <div>
        <% if @transaction_template.errors.full_messages.present? %>
          <% @transaction_template.errors.full_messages.each do |error| %>
            <span class="text-red-500 my-3"><%= error %></span>
          <% end %>
        <% end %>
      </div>
      <div>
        <%= form.label :amount, class: "text-sm font-medium text-gray-700 block"%>
        <div class="mt-1">
          <%= form.number_field :amount, class: "text-sm px-3 py-2 mb-2 text-slate-700 border shadow rounded-md w-full focus:outline-none focus:ring-l focus:ring-green-500 focus:border-green-500 invalid:text-red-700 invalid:focus:ring-red-700 invalid:focus:border-red-700" %>
        </div>
      </div>
      <div>
        <%= form.label :type, class: "text-sm font-medium text-gray-700 block"%>
        <div class="mt-1">
          <%= form.text_field :type, class: "text-sm px-3 py-2 mb-2 text-slate-700 border shadow rounded-md w-full focus:outline-none focus:ring-l focus:ring-green-500 focus:border-green-500 invalid:text-red-700 invalid:focus:ring-red-700 invalid:focus:border-red-700" %>
        </div>
      </div>
      <div>
        <%= form.label :wallet_account, class: "text-sm font-medium text-gray-700 block"%>
        <div class="mt-1">
          <%= form.text_field :wallet_account, class: "text-sm px-3 py-2 mb-2 text-slate-700 border shadow rounded-md w-full focus:outline-none focus:ring-l focus:ring-green-500 focus:border-green-500 invalid:text-red-700 invalid:focus:ring-red-700 invalid:focus:border-red-700" %>
        </div>
      </div>
      <div>
        <%= form.label :category, class: "text-sm font-medium text-gray-700 block"%>
        <div class="mt-1">
          <%= form.text_field :category, class: "text-sm px-3 py-2 mb-2 text-slate-700 border shadow rounded-md w-full focus:outline-none focus:ring-l focus:ring-green-500 focus:border-green-500 invalid:text-red-700 invalid:focus:ring-red-700 invalid:focus:border-red-700" %>
        </div>
      </div>
      <div>
        <%= form.label :description, class: "text-sm font-medium text-gray-700 block"%>
        <div class="mt-1">
          <%= form.text_area :description, class: "resize-none w-full h-32 px-3 py-2 text-sm border shadow rounded-md focus:outline-none focus:ring-1 focus:ring-green-500 focus:border-green-500 invalid:text-red-700 invalid:focus:ring-red-700 invalid:focus:border-red-700" %>
        </div>
      </div>
      <div>
        <%= form.submit "Create", class: "w-full flex justify-center mt-4 py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>

