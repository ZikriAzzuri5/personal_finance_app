<div class="max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl mt-6">
  <div class="md:flex flex flex-col">
    <div class="border-b-2 flex items-center">
      <div class="md:flex-shrink-0 mr-6 ">
        <img class="object-cover h-12 w-12 sm:h-24 sm:w-24 rounded-full max-w-none ml-4" src="https://source.unsplash.com/random" alt="Random Image">
      </div>
      <div class="p-8">
        <h3 class="block mt-1 text-lg leading-tight font-medium text-black"><%=  @category.name %></h3>
        <div class="mt-2">
          <p class="text-gray-500"><%= @category.description %></p>
          <div class="flex flex-row justify-between space-x-6 mt-4">
            <%= link_to 'Remove', @category	, method: :delete, class:"bg-gradient-to-r from-red-500 to-red-700 hover:from-red-700 hover:to-red-900 text-white font-bold py-2 px-4 rounded-md shadow-lg" %>
            <%= button_to 'Edit', edit_category_path, method: :get, class: "border border-gray-100 text-gray-800 font-bold py-2 px-4 rounded-md shadow"%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
