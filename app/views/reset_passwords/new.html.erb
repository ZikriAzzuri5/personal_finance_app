<ul class="list-disc">
  <% @user.errors.full_messages.each do |error| %>
    <li class="text-red-500"><%= error %></li>
  <% end %>
</ul>

<h1 class="text-2xl">Reset Password</h1>

<%= form_with(url: reset_password_path, method: :post) do |form| %>
  <div class="mt-4">
    <%= form.label :email, class: "block font-semibold" %>
    <%= form.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div class="mt-4">
    <%= form.submit 'Reset Password', class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
  </div>
<% end %>

