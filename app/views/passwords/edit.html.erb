<ul class="list-disc">
  <% @user.errors.full_messages.each do |error| %>
    <li class="text-red-500"><%= error %></li>
  <% end %>
</ul>

<div class="container mx-auto px-4 sm:px-6 lg:px-8">
  <h1 class="text-2xl font-bold mb-4">Change Password</h1>

  <%= form_with(model: @user, url: password_path(@user.reset_password_token), method: :patch) do |form| %>
    <div class="mb-4">
      <div class="flex flex-col">
        <%= form.label :password, class: "text-sm text-gray-700 mb-2" %>
        <%= form.password_field :password, class: "border rounded-md py-2 px-3" %>
      </div>
    </div>

    <div class="mb-4">
      <div class="flex flex-col">
        <%= form.label :password_confirmation, class: "text-sm text-gray-700 mb-2" %>
        <%= form.password_field :password_confirmation, class: "border rounded-md py-2 px-3" %>
      </div>
    </div>

    <%= form.submit "Change Password", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
</div>
